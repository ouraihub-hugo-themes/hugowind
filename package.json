{
  "name": "hugowind",
  "version": "0.1.2",
  "description": "A Hugo theme inspired by AstroWind with full multilingual support",
  "type": "module",
  "scripts": {
    "release": "standard-version && git push --follow-tags origin main",
    "release:minor": "standard-version --release-as minor && git push --follow-tags origin main",
    "release:major": "standard-version --release-as major && git push --follow-tags origin main",
    "release:patch": "standard-version --release-as patch && git push --follow-tags origin main",
    "release:first": "standard-version --first-release && git push --follow-tags origin main",
    "ts:build": "pnpm run ts:build:main && pnpm run ts:build:toggle",
    "ts:build:main": "esbuild assets/ts/main.ts --bundle --minify --outfile=static/js/main.js --target=es2020",
    "ts:build:toggle": "esbuild assets/ts/toggle-theme.ts --bundle --minify --outfile=static/js/toggle-theme.js --target=es2020",
    "ts:watch": "concurrently -n \"Main,Toggle\" -c \"blue,cyan\" \"esbuild assets/ts/main.ts --bundle --watch --outfile=static/js/main.js --target=es2020\" \"esbuild assets/ts/toggle-theme.ts --bundle --watch --outfile=static/js/toggle-theme.js --target=es2020\"",
    "ts:dev": "pnpm run ts:dev:main && pnpm run ts:dev:toggle",
    "ts:dev:main": "esbuild assets/ts/main.ts --bundle --sourcemap --outfile=static/js/main.js --target=es2020",
    "ts:dev:toggle": "esbuild assets/ts/toggle-theme.ts --bundle --sourcemap --outfile=static/js/toggle-theme.js --target=es2020",
    "css:build": "tailwindcss -i ./assets/css/main.css -o ./static/css/main.css --minify",
    "css:watch": "tailwindcss -i ./assets/css/main.css -o ./static/css/main.css --watch",
    "css:dev": "tailwindcss -i ./assets/css/main.css -o ./static/css/main.css",
    "dev": "concurrently -n \"TS,CSS,Hugo\" -c \"blue,green,yellow\" \"pnpm run ts:watch\" \"pnpm run css:watch\" \"hugo server --logLevel debug --disableFastRender\"",
    "dev:fast": "hugo server --logLevel debug --disableFastRender=false",
    "pagefind": "pagefind --site public",
    "build": "pnpm run ts:build && pnpm run css:build && hugo --gc --minify && pnpm run pagefind",
    "build:dev": "pnpm run ts:dev && pnpm run css:dev && hugo && pnpm run pagefind",
    "preview": "pnpm run build && hugo server --disableLiveReload",
    "clean": "pnpm run clean:build && pnpm run clean:cache",
    "clean:build": "node -e \"const fs=require('fs');['public','static/js','static/css/main.css'].forEach(p=>{try{fs.rmSync(p,{recursive:true,force:true})}catch(e){}})\"",
    "clean:cache": "node -e \"const fs=require('fs');try{fs.rmSync('resources',{recursive:true,force:true})}catch(e){}\"",
    "type-check": "tsc --noEmit",
    "lint:ts": "tsc --noEmit",
    "lint:css": "stylelint 'assets/**/*.css'",
    "format": "prettier --write 'assets/**/*.{ts,css,html}'",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "validate": "pnpm run type-check && pnpm run test:run"
  },
  "keywords": [
    "hugo",
    "theme",
    "astrowind",
    "blog",
    "typescript",
    "tailwindcss",
    "multilingual"
  ],
  "author": "sol",
  "license": "MIT",
  "packageManager": "pnpm@10.25.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.16",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^20.0.0",
    "@vitest/ui": "^4.0.5",
    "concurrently": "^9.2.1",
    "esbuild": "^0.20.0",
    "happy-dom": "^20.0.10",
    "pagefind": "^1.4.0",
    "prettier": "^3.1.0",
    "standard-version": "^9.5.0",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^36.0.0",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.3.0",
    "vitest": "^4.0.5"
  }
}
